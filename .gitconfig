	email = necer95@gmail.com
	name = Nebojša Koturović
[core]
	pager = nvim -R
    excludesfile = ~/.gitignore
[alias]
    lg = "!git --no-pager log --graph --pretty=format:'%C(green)%h%C(reset) - %C(italic)%C(cyan)%an%C(reset) (%C(yellow)%ar%C(reset))%n%C(bold)%s%C(reset)%n%b'"
    hist = "!git --no-pager log --graph --pretty=format:'%C(green)%h%C(reset) - %C(italic)%C(cyan)%an%C(reset) (%C(yellow)%ar%C(reset)): %s'"
    hi = hist
    cm = commit
[color]
	pager = no
[pager]
    branch = false
    log = true
[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
