alias ls='ls --color=auto'
alias rm='echo "rm is disabled, use trash/trash-put/rmt for safe rm or remove (/bin/rm) for removing file."'
alias remove='/bin/rm -irv'
alias rmt=trash-put
alias vi=nvim
alias vim=nvim
alias gmf='cp ~/Templates/Makefile ./'
alias less=nvimpager
cdc () {
    cd $(ec)
}

export TMPDIR=$HOME/tmp
export TMP=$HOME/tmp
export PAGER=nvimpager
export EDITOR=nvim
export SHELL=zsh
export CARGO_TARGET_DIR=$HOME/tmp/cargo_target
export SUDO_ASKPASS=/usr/bin/lxqt-openssh-askpass
